# Remove the line below if you want to inherit .editorconfig settings from higher directories
root = true
# See https://docs.microsoft.com/zh-tw/dotnet/fundamentals/code-analysis/style-rules/formatting-rules#indentation-options for reference
[*.cs]
# Tab indentation
[*.cs]
indent_style = tab
# For New line
csharp_new_line_before_open_brace = methods, types, accessors, properties
csharp_new_line_before_else = true
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true
csharp_new_line_before_members_in_anonymous_types = true
# For spacing
# Set spacing for method declarations
csharp_space_between_method_declaration_parameter_list_parentheses = true
csharp_space_between_method_declaration_empty_parameter_list_parentheses = false
csharp_space_between_method_declaration_name_and_open_parenthesis = false
# Set spacing for method calls
csharp_space_between_method_call_parameter_list_parentheses = true
csharp_space_between_method_call_empty_parameter_list_parentheses = false
csharp_space_between_method_call_name_and_opening_parenthesis = false
# Set other spacing options
csharp_space_after_keywords_in_control_flow_statements = false
csharp_space_between_parentheses = control_flow_statements, expressions
csharp_space_after_cast = false
# Set Spacing for brackets
csharp_space_before_open_square_brackets = false
csharp_space_between_empty_square_brackets = false
csharp_space_between_square_brackets = true
# Set Spacing for delimiters
csharp_space_after_semicolon_in_for_statement = true
csharp_space_after_comma = true
csharp_space_after_dot = false
# For Wrapping
csharp_preserve_single_line_statements = false
csharp_preserve_single_line_blocks = false
# Some Spec.
dotnet_diagnostic.IDE0040.severity = warning
