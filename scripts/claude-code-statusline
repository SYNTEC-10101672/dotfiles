#!/usr/bin/env bash
# Claude Code status line display
#
# This script generates the status line display for Claude Code,
# showing different information based on how Claude was launched:
# - Native Claude Code: shows "[Model] üìÅ dir | üåø branch"
# - CLIProxy mode: shows "[CLIProxy: model-name] üìÅ dir | üåø branch"

# Read JSON input from stdin
input=$(cat)

# Extract values using jq
MODEL_DISPLAY=$(echo "$input" | jq -r '.model.display_name')
CURRENT_DIR=$(echo "$input" | jq -r '.workspace.current_dir')
CONTEXT_USED=$(echo "$input" | jq -r '.context_window.used_percentage // "null"')

# Determine display prefix based on mode
if [ "$CLAUDE_PROXY_MODE" = "cliproxy" ]; then
  # CLIProxy mode: show the actual model being used
  if [ -n "$CLAUDE_PROXY_MODEL" ]; then
    PREFIX="Claude Code CLIProxy: $CLAUDE_PROXY_MODEL"
  else
    PREFIX="Claude Code CLIProxy"
  fi
else
  # Native mode: show the model display name from Claude
  PREFIX="Claude Code Native ($MODEL_DISPLAY)"
fi

# Show git branch if in a git repo
GIT_BRANCH=""
if git rev-parse --git-dir > /dev/null 2>&1; then
    BRANCH=$(git branch --show-current 2>/dev/null)
    if [ -n "$BRANCH" ]; then
        GIT_BRANCH=" | üåø $BRANCH"
    fi
fi

# Show context usage if available
CONTEXT_DISPLAY=""
if [ "$CONTEXT_USED" != "null" ] && [ -n "$CONTEXT_USED" ]; then
    CONTEXT_DISPLAY=" | üß† ${CONTEXT_USED}%"
fi

# Output the status line
echo "[$PREFIX] üìÅ ${CURRENT_DIR##*/}$GIT_BRANCH$CONTEXT_DISPLAY"
